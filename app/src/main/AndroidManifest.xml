<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.claudiocavallaro.progettogad" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/trasp"
        android:label="La promozione per te"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.MainActivity"
            android:label="La promozione per te"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.InfoActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="Informazioni"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>

        <activity
            android:name=".Activity.CardActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="Specifiche promozione"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>

        <activity
            android:name=".Activity.CercaActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="Cerca ..."
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>

        <activity
            android:name=".Activity.GestoreActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="Cerca ..."
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>


    </application>

</manifest>
